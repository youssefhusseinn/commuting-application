<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.CancelTrip">
    <children>
        <Label fx:id="deleteLabel" layoutX="27.0" layoutY="28.0" text="Choose the trip you wish to Cancel:" textAlignment="CENTER">
            <font>
                <Font name="System Bold Italic" size="17.0" />
            </font>
        </Label>
        <ListView fx:id="tripsListView" layoutX="6.0" layoutY="63.0" prefHeight="200.0" prefWidth="586.0" />
        <Button fx:id="cancelTripButton" layoutX="353.0" layoutY="310.0" mnemonicParsing="false" onAction="#cancelTripButtonClicked" prefHeight="49.0" prefWidth="99.0" text="Cancel Trip" />
        <Button fx:id="cancelButton" layoutX="491.0" layoutY="310.0" mnemonicParsing="false" onAction="#cancelButtonClicked" prefHeight="49.0" prefWidth="99.0" text="Cancel" />
        <Label fx:id="tripLabel" layoutX="164.0" layoutY="318.0" />
        <TextField fx:id="numberOfTicketsTextField" layoutX="27.0" layoutY="285.0" promptText="Number of tickets" />
        <Button fx:id="calculateTotalButton" layoutX="27.0" layoutY="323.0" mnemonicParsing="false" onAction="#calculateTotalButtonClicked" text="Calculate Total" />
        <Label fx:id="totalLabel" layoutX="146.0" layoutY="327.0" text="Total:" />
    </children>
</AnchorPane>
